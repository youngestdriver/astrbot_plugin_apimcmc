{
  "target_group": {
    "description": "目标QQ群号",
    "type": "string",
    "hint": "接收服务器监控消息的QQ群号",
    "default": "123456789"
  },
  "server_name": {
    "description": "服务器名称",
    "type": "string",
    "hint": "服务器的显示名称（用于消息中显示）",
    "default": "我的Minecraft服务器"
  },
  "server_ip": {
    "description": "Minecraft服务器IP地址",
    "type": "string", 
    "hint": "要监控的Minecraft服务器IP地址或域名",
    "default": "play.cn"
  },
  "server_port": {
    "description": "Minecraft服务器端口",
    "type": "int",
    "hint": "要监控的Minecraft服务器端口号",
    "default": 123456
  },
  "check_interval": {
    "description": "检查间隔（秒）",
    "type": "int",
    "hint": "每隔多少秒检查一次服务器状态",
    "default": 10
  },
  "enable_auto_monitor": {
    "description": "自动启动监控",
    "type": "bool",
    "hint": "插件加载时是否自动开始监控服务器状态",
    "default": false
  }
}